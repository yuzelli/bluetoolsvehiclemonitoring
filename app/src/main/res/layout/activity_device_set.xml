<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_device_set"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.yuzelli.bluetoolsvehiclemonitoring.view.activity.DeviceSetActivity">

    <include
        android:id="@+id/include_common_topbar"
        layout="@layout/include_common_topbar" />





    <TextView
        android:id="@+id/tv_mubiao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:gravity="center"
        android:background="@drawable/view_shape_line"
        android:padding="10dp"
        android:layout_margin="5dp"
        android:textSize="18sp"
        android:layout_below="@+id/include_common_topbar"
        android:text="目标设备：无"/>
    <ListView
        android:id="@+id/lv_device"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btn_ok"
        android:layout_below="@id/tv_mubiao"/>
    <Button
        android:id="@+id/btn_ok"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:text="确定"
        android:layout_margin="5dp"
        android:background="@drawable/view_shape_green"/>
</RelativeLayout>
